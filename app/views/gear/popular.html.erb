<h1>Popular Music Gear</h1>

<ul class="large-block-grid-3 popular-gear">
  <% @gear_hash.each do |key,gear| %>
    <% if gear.present? %>
      <li>
        <h2><%= key %></h2>
        <div class="image-container">
          <%= link_to gear.first do %>
            <%= image_tag gear.first.image_url %>
          <% end %>
        </div>
        <ol>
          <% gear.each do |g| %>
            <li><%= link_to g.name, g %></li>
          <% end %>
        </ol>
      </li>
    <% end %>
  <% end %>
</ul>
  
